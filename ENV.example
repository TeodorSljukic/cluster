# MongoDB Connection
MONGODB_URI="mongodb+srv://<user>:<password>@<cluster-host>/<db-name>?retryWrites=true&w=majority"
MONGODB_DB="abgc"

# JWT Secret for authentication (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET="your-secret-key-here"

# Public Base URL (for server-side fetch in production)
# For Hostinger, use your domain: https://yourdomain.com
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# For importing to Atlas (use your Atlas connection string)
ATLAS_URI="mongodb+srv://<user>:<password>@<cluster-host>/<db-name>?retryWrites=true&w=majority"
ATLAS_DB="abgc"

# Email Configuration - EmailJS (recommended)
EMAILJS_PUBLIC_KEY="your_emailjs_public_key"
EMAILJS_SERVICE_ID="your_emailjs_service_id"
EMAILJS_TEMPLATE_ID="your_emailjs_template_id"

