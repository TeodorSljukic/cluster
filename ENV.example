# MongoDB Connection
MONGODB_URI="mongodb+srv://<user>:<password>@<cluster-host>/<db-name>?retryWrites=true&w=majority"
MONGODB_DB="abgc"

# JWT Secret for authentication (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET="your-secret-key-here"

# Public Base URL (for server-side fetch in production)
# For Hostinger, use your domain: https://yourdomain.com
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# For importing to Atlas (use your Atlas connection string)
ATLAS_URI="mongodb+srv://<user>:<password>@<cluster-host>/<db-name>?retryWrites=true&w=majority"
ATLAS_DB="abgc"

# Email Configuration - Gmail SMTP (recommended, first priority)
# Use Gmail App Password: https://myaccount.google.com/apppasswords
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password_here"

# Email Configuration - EmailJS (alternative)
# Get these from: https://dashboard.emailjs.com
# 1. Public Key: https://dashboard.emailjs.com/admin/integration (looks like: user_xxxxxxxxxxxxx)
# 2. Service ID: https://dashboard.emailjs.com/admin/service (looks like: service_xxxxxxxx)
# 3. Template ID: https://dashboard.emailjs.com/admin/template (looks like: template_xxxxxxxx)
EMAILJS_PUBLIC_KEY="user_your_public_key_here"
EMAILJS_SERVICE_ID="service_your_service_id_here"
EMAILJS_TEMPLATE_ID="template_your_template_id_here"

# Email Configuration - Other alternatives
# RESEND_API_KEY="your_resend_api_key"
# FORMSPREE_ENDPOINT="https://formspree.io/f/your_endpoint"
# EMAIL_WEBHOOK_URL="https://your-webhook-url.com/send-email"